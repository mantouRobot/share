<launch>
  <arg name="video_dev" value="/dev/video0"/>
  
<!--  	<node pkg="nodelet" type="nodelet" name="orbcam_nodelet_manager" args="manager" output="screen">-->
<!--    	<param name="num_worker_threads" value="4" />-->
<!--    </node> -->
  <node pkg="nodelet" type="nodelet" name="b_usb_cam_nodelet" args="load usb_cam/usb_cam_nodelet camera" output="screen">
    <param name="video_device" value="$(arg video_dev)" />
    <param name="image_width" value="640" />
    <param name="image_height" value="480" />
    <param name="pixel_format" value="yuyv" />
    <param name="camera_frame_id" value="camera_rgb_optical_frame" />
    <param name="io_method" value="mmap"/>  	
    </node>	 
</launch>
