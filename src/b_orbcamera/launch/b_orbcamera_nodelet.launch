<launch>
	<arg name="camera"      default="camera"/>
	<arg name="scan_topic" default="scan"/>
		
  <node pkg="nodelet" type="nodelet" name="camera" args="manager" output="screen">
    <param name="num_worker_threads" value="8" />
  </node>

  <node pkg="nodelet" type="nodelet" name="b_orbcamera_nodelet" args="load b_orbcamera/OrbbecCameraNodelet camera" output="screen">
    <rosparam>
      transform_tolerance: 0.01
      min_height: 0.3
      max_height: 1.5

      angle_min: -0.50 #orbbec
      angle_max: 0.50 #orbbec
      #angle_increment: 0.00159814720973 #for depthimage_to_laserscan is per pix
      angle_increment: 0.0032
      scan_time: 0.033
      range_min: 0.4
      range_max: 8.0
      use_inf: true
      open_skeleton: true

      # Concurrency level, affects number of pointclouds queued for processing and number of threads used
      # 0 : Detect number of cores
      # 1 : Single threaded
      # 2->inf : Parallelism level
      concurrency_level: 1
    </rosparam>
  </node>
  <include file="$(find b_usb_cam)/launch/b_usb_cam_nodelet.launch" />
</launch> 
